{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "fecha": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "link": {
      "type": "string",
      "format": "uri"
    },
    "resumen": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "fecha",
    "link",
    "resumen",
    "tags"
  ],
  "additionalProperties": false
}